<div class="list">
  <h2>{{ list.title }}</h2>

  <div class="todos">
    <div class="form-hide">
      <form {{ action "addItem" on="submit" }}>
        {{ textarea class="form-control" value=itemDescription }}
        <div class="actions">
          <button class="btn btn-success" type="submit">Agregar</button>
          <button class="btn btn-link glyphicon glyphicon-remove" {{ action "close" }}></button>
        </div>
      </form>
      {{#each list.items as |item|}}
        {{#trello-item item=item}}{{/trello-item}}
      {{/each}}
    </div>
  </div>

  <div class="lists-containers">
    <div class="actions text-center">
      <button class="btn btn-danger" {{ action "delete" }}>
        Eliminar Lista
      </button>
    </div>
  </div>
</div>
